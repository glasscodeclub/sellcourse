<!DOCTYPE html>
<html lang="en">

<%- include("./partials/header") %>

<body>
  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center">
      <!-- <h1 class="logo me-auto"><a href="index.html"></a></h1> -->
      <!-- Uncomment below if you prefer to use an image logo -->
      <a href="/" class="logo me-auto"><img src="assets/img/logo_white.png" alt="" class="img-fluid" /></a>

      <nav id="navbar" class="navbar order-last order-lg-0">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/courses">Courses</a></li>
        <li><a href="/pricing">Pricing</a></li>
        <li><a href="/about">About</a></li>
        <% if(login && login===true){ %>
        <li class="dropdown"><a class="active" href="/profile" class="profile-btn">
            Profile<i class="bi bi-chevron-down"></i></a>
          <ul >
            <li ><a href="/profile#my-courses" style="color: black;">My Courses</a></li>
            <li><a href="/contact" style="color: black;">Help</a></li>
            <li><a href="/logout" style="color: #5fcf80;">Logout</a></li>
          </ul>
        </li>
        <% } else { %>
          <li><a href="/signup">Get Started</a></li>
          <% } %>
      </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav>
      <!-- .navbar -->


    </div>
  </header>
  <!-- End Header -->

  <main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in" style="background-color: #273036">
      <div class="container" >
        <h2><%- username %></h2>
      </div>
      <div class="container">
        <button style="font-size: 14px; background: #5fcf8131;
                       padding: 7px 14px; color: #5fcf80;
                       margin-top: 10px; border: 1px solid #5fcf80;
                       border-radius: 10px;">
         Reset Password
        </button>
      </div>
    </div>
    <!-- End Breadcrumbs -->

    <!-- ======= Profile Section ======= -->
    <!-- <section id="profile" class="profile">
      <div class="container" data-aos="fade-up">
        <div class="row">
        
            <div class="section-title">
              <h2>Options</h2>
              <p>My Profile</p>
            </div>




        </div>

    
      </div>
    </section> -->
    <!-- End Profile Section -->
      <!-- ======= Popular Courses Section ======= -->
      <% if(results){ %>
      <section id="my-courses" class="courses">
        <div class="container" data-aos="fade-up">
      
          <div class="section-title">
            <h2>Courses</h2>
            <p>My Courses</p>
          </div>
      
          <div class="row" data-aos="zoom-in" data-aos-delay="100">
            
            <% for(var i=0; i < results.length; i++){ %>
              
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                      <div class="course-item">
                        <img src="<%-results[i].imageUrl%>" class="img-fluid" alt="...">
                        <div class="course-content">
                          <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4><%- results[i].tag -%></h4>
                            <p class="price">â‚¹<%- results[i].cost -%>
                            </p>
                          </div>
              
                          <h3><a href="/profile/mycourses/<%-results[i].id %>">
                              <%- results[i].title-%>
                            </a></h3>
                          <p>
                            <%- results[i].description-%>
                          </p>
                          <div class="trainer d-flex justify-content-between align-items-center">
                            <div class="trainer-profile d-flex align-items-center">
                              <img src="assets/img/trainers/trainer-1.jpg" class="img-fluid" alt=""
                                style="max-width: 30px;max-height: 30px;">
                              <span>Rated : </span>
                            </div>
                            <div class="trainer-rank d-flex align-items-center">
                              <% for(let rating=0; rating < results[i].averageRating; rating++){ %>
                                <span><i class="bx bxs-star"></i></span>
              
                                <% } %>
                                  <% for(let j=5 - results[i].averageRating; j> 0; j--){ %>
                                    <span><i class="bx bx-star"></i></span>
                                    <% } %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div> <!-- End Course Item-->
                   <% } %> 
          </div>
       
        </div>
      </section>
      <% } %>
 <!-- expired courses -->
      <% if(expired){ %>
        <section id="my-courses" class="courses">
          <div class="container" data-aos="fade-up">
      
            <div class="section-title">
              <h2>Courses</h2>
              <p>Expired Courses</p>
            </div>
      
            <div class="row" data-aos="zoom-in" data-aos-delay="100">
      
              <% for(var i=0; i < expired.length; i++){ %>
      
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                  <div class="course-item">
                    <img src="<%-results[i].imageUrl%>" class="img-fluid" alt="...">
                    <div class="course-content" style="background-color: rgba(0,0,0,0.1);">
                      <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4><%-results[i].tag -%></h4>
                        <p class="price" style="color:#721c24;">Expired
                        </p>
                      </div>
      
                      <h3><a href="/courses/<%-expired[i].id %>">
                          <%- expired[i].title-%>
                        </a></h3>
                      <p>
                        <%- expired[i].description-%>
                      </p>
                      <div class="trainer d-flex justify-content-between align-items-center">
                        <div class="trainer-profile d-flex align-items-center">
                          <img src="assets/img/trainers/trainer-1.jpg" class="img-fluid" alt=""
                            style="max-width: 30px;max-height: 30px;">
                          <span>Rated : </span>
                        </div>
                        <div class="trainer-rank d-flex align-items-center">
                          <% for(let rating=0; rating < expired[i].averageRating; rating++){ %>
                            <span><i class="bx bxs-star"></i></span>
      
                            <% } %>
                              <% for(let j=5 - expired[i].averageRating; j> 0; j--){ %>
                                <span><i class="bx bx-star"></i></span>
                                <% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div> <!-- End Course Item-->
                <% } %>
            </div>
      
          </div>
        </section>
        <% } %>
  </main>
  <!-- End #main -->

  <!-- ======= Footer ======= -->
  <%- include("./partials/footer") %>
  <!-- End Footer -->

  <div id="preloader"></div>
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
      class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="assets/vendor/aos/aos.js"></script>
  <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="assets/vendor/php-email-form/validate.js"></script>
  <script src="assets/vendor/purecounter/purecounter.js"></script>
  <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>

  <!-- Template Main JS File -->
  <script src="assets/js/main.js"></script>
</body>

</html>